@model IEnumerable<TradesCompany.Domain.Entities.Notification>
@using System.Security.Claims
@{
    if (User.FindFirst(ClaimTypes.Role)?.Value == "USER")
    {
        Layout = "~/Views/Shared/Layouts/_UserLayout.cshtml";
    }
    else
    {
    Layout = "~/Views/Shared/Layouts/_ELayout.cshtml";
    }
    ViewData["Title"] = "Notification";
    string userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}
<input  value="@userId" type="hidden" id="userId"/>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<style>
    /* body {
        margin-top: 20px;
        background: #eee;
    } */

    .card {
        box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
    }

    .avatar.sm {
        width: 2.25rem;
        height: 2.25rem;
        font-size: .818125rem;
    }

    .table-nowrap .table td, .table-nowrap .table th {
        white-space: nowrap;
    }

    .table > :not(caption) > * > * {
        padding: 0.75rem 1.25rem;
        border-bottom-width: 1px;
    }

    table th {
        font-weight: 600;
        background-color: #eeecfd !important;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-12 mb-3 mb-lg-5">
            <div class="overflow-hidden card table-nowrap table-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Notification</h5>
                </div>
                <div class="table-responsive">
                    @if (!Model.Any())
                    {
                        <h1>Not Notification</h1>
                    }
                    else
                    {
                        <table class="table mb-0">
                            <thead class="small text-uppercase bg-body text-muted">
                                <tr>
                                    <th>NotificationType</th>
                                    <th>Message</th>
                                    <th>Time</th>
                                    @* <th class="text-end">Action</th> *@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var notication in Model)
                                {


                                    <tr class="align-middle">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div>
                                                    <div class="h6 mb-0 lh-1">
                                                        @if (notication.NotificationType == "Quotation")
                                                        {
                                                            <a asp-action="AllQuotation" asp-controller="User">@notication.NotificationType</a>
                                                        }
                                                        else if (notication.NotificationType == "Booking")
                                                        {
                                                            <a asp-action="Dashboard" asp-controller="Employee" >@notication.NotificationType</a>
                                                        }
                                                        else if (notication.NotificationType.StartsWith("Schedule") || notication.NotificationType.EndsWith("Schedule"))
                                                        {
                                                            <a asp-action="MyScheduleServices" asp-controller="User">@notication.NotificationType</a>
                                                        }
                                                        else if (notication.NotificationType.EndsWith("Reminder") && notication.NotificationType.StartsWith("Service"))
                                                        {
                                                            <a asp-action="MyScheduleServices" asp-controller="Employee">@notication.NotificationType</a>
                                                        } 
                                                        else
                                                        {
                                                            @notication.NotificationType
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@notication.Message</td>
                                        <td> <span class="d-inline-block align-middle">@notication.Created</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/signalr.js"></script>
    <script src="~/js/ReadNotification.js"></script>
}