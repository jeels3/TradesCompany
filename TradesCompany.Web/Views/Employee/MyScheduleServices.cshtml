@model IEnumerable<TradesCompany.Application.DTOs.ScheduleServiceByEmployee>

@{
    Layout = "~/Views/Shared/Layouts/_EmployeeLayout.cshtml";
    ViewData["Title"] = "Your Schedule";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<style>
    .card {
        box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
    }

    .avatar.sm {
        width: 2.25rem;
        height: 2.25rem;
        font-size: .818125rem;
    }

    .table-nowrap .table td, .table-nowrap .table th {
        white-space: nowrap;
    }

    .table > :not(caption) > * > * {
        padding: 0.75rem 1.25rem;
        border-bottom-width: 1px;
    }

    table th {
        font-weight: 600;
        background-color: #eeecfd !important;
    }

    .filter-btn.active {
        color: white !important;
    }

    .filter-btn[data-status="scheduled"].active {
        background-color: #f0ad4e;
    }

    .filter-btn[data-status="completed"].active {
        background-color: #5cb85c;
    }

    .filter-btn[data-status="canceled"].active {
        background-color: #d9534f;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-12 mb-3 mb-lg-5">
            <div class="overflow-hidden card table-nowrap table-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Service Man Schedule Services</h5>
                </div>

                <!-- Filter Buttons -->
                <div class="mb-3 px-3">
                    <div class="d-flex gap-2 flex-wrap">
                        <button class="btn btn-outline-primary filter-btn active" data-status="all">All</button>
                        <button class="btn btn-outline-warning filter-btn" data-status="scheduled">Scheduled</button>
                        <button class="btn btn-outline-success filter-btn" data-status="completed">Completed</button>
                        <button class="btn btn-outline-danger filter-btn" data-status="canceled">Canceled</button>
                    </div>
                </div>

                <div class="table-responsive">
                    @if (!Model.Any())
                    {
                        <h5 class="text-capitalize align-items-center text-center m-3 text-danger fw-bold">No Service Scheduled</h5>
                    }
                    else
                    {
                        <table class="table mb-0">
                            <thead class="small text-uppercase bg-body text-muted">
                                <tr>
                                    <th>Service Man</th>
                                    <th>Customer Name</th>
                                    <th>Customer Email</th>
                                    <th>Work Details</th>
                                    <th>Service Price</th>
                                    <th>Service Type</th>
                                    <th>Status</th>
                                    <th>Schedule</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model)
                                {
                                    <tr class="align-middle service-row" data-status="@service.Status.ToLower()">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="h6 mb-0 lh-1">@service.ServiceMan</div>
                                            </div>
                                        </td>
                                        <td>@service.CustomerName</td>
                                        <td>@service.CustomerEmail</td>
                                        <td>@service.WorkDetails</td>
                                        <td><span class="d-inline-block align-middle">@service.TotalPrice</span></td>
                                        <td><span>@service.ServiceName</span></td>
                                        <td>@service.Status</td>
                                        <td>@service.ScheduledAt</td>
                                        <td class="text-end">
                                            <div class="drodown">
                                                <a data-bs-toggle="dropdown" href="#" class="btn p-1" aria-expanded="false">
                                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <button data-id="@service.ScheduleServiceId"
                                                            class="dropdown-item scheduleComplete-btn">
                                                        Complete Service
                                                    </button>
                                                    <button data-id="@service.ScheduleServiceId"
                                                            class="dropdown-item scheduleCancel-btn">
                                                        Schedule Cancel
                                                    </button>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Filter functionality
            $('.filter-btn').click(function () {
                const selectedStatus = $(this).data('status');
                $('.filter-btn').removeClass('active');
                $(this).addClass('active');

                if (selectedStatus === 'all') {
                    $('.service-row').show();
                } else {
                    $('.service-row').each(function () {
                        const rowStatus = $(this).data('status');
                        $(this).toggle(rowStatus === selectedStatus);
                    });
                }
            });

            // Complete service
            $(document).on('click', '.scheduleComplete-btn', function () {
                const ScheduleServiceId = $(this).data('id');

                if (confirm('Service Completed?')) {
                    $.ajax({
                        url: `/Employee/ServiceCompleted?ScheduleServiceId=${ScheduleServiceId}`,
                        method: 'POST',
                        success: function (res) {
                            alert(res.message);
                            location.reload();
                        },
                        error: function (xhr) {
                            const err = xhr.responseJSON?.message || 'Error Completing Service';
                            alert(err);
                        }
                    });
                }
            });

            // Cancel service
            $(document).on('click', '.scheduleCancel-btn', function () {
                const ScheduleServiceId = $(this).data('id');

                if (confirm('Are you sure you want to cancel this booking?')) {
                    $.ajax({
                        url: `/Employee/ScheduleCancel?ScheduleServiceId=${ScheduleServiceId}`,
                        method: 'POST',
                        success: function (res) {
                            alert(res.message);
                            location.reload();
                        },
                        error: function (xhr) {
                            const err = xhr.responseJSON?.message || 'Error Cancelling Request';
                            alert(err);
                        }
                    });
                }
            });
        });
    </script>
}
