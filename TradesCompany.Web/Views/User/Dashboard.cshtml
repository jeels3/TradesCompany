@model IEnumerable<TradesCompany.Domain.Entities.ServiceType>
@{
    // Layout = null;
    var userName = "Sarah";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Trades Company</title>
    <link rel="icon" type="image/x-icon" href="data:image/x-icon;base64," />

    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin />
    <link rel="stylesheet" as="style" onload="this.rel='stylesheet'"
          href="https://fonts.googleapis.com/css2?display=swap&family=Inter:wght@400;500;700;900&family=Noto+Sans:wght@400;500;700;900" />

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
</head>
<body>
    <div class="relative flex size-full min-h-screen flex-col bg-white group/design-root overflow-x-hidden" style='font-family: Inter, "Noto Sans", sans-serif;'>
        <div class="layout-container flex h-full grow flex-col">
            <!-- Header -->
            <header class="flex items-center justify-between whitespace-nowrap border-b border-solid border-b-[#f0f2f5] px-10 py-3">
                <div class="flex items-center gap-4 text-[#111418]">
                    <div class="size-4">
                        <svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M24 4H6V17.3333V30.6667H24V44H42V30.6667V17.3333H24V4Z" fill="currentColor"></path>
                        </svg>
                    </div>
                    <h2 class="text-[#111418] text-lg font-bold leading-tight tracking-[-0.015em]">Home Services</h2>
                </div>

                <div class="flex flex-1 justify-end gap-8">
                    <!-- Search Input -->
                    <label class="flex flex-col min-w-40 !h-10 max-w-64">
                        <div class="flex w-full flex-1 items-stretch rounded-lg h-full">
                            <div class="text-[#60758a] flex border-none bg-[#f0f2f5] items-center justify-center pl-4 rounded-l-lg border-r-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" fill="currentColor" viewBox="0 0 256 256">
                                    <path d="M229.66,218.34l-50.07-50.06a88.11,88.11,0,1,0-11.31,11.31l50.06,50.07a8,8,0,0,0,11.32-11.32ZM40,112a72,72,0,1,1,72,72A72.08,72.08,0,0,1,40,112Z"></path>
                                </svg>
                            </div>
                            <input type="text" placeholder="Search" class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#111418] focus:outline-0 focus:ring-0 border-none bg-[#f0f2f5] focus:border-none h-full placeholder:text-[#60758a] px-4 rounded-l-none border-l-0 pl-2 text-base font-normal leading-normal" />
                            <a asp-controller="User" asp-action="BookService">Book Service</a>
                            <a asp-controller="User" asp-action="AllQuotation">Booking Services</a>
                            <a asp-controller="User" asp-action="MyScheduleServices">Scheduled Services</a>
                        </div>
                    </label>

                    <!-- Bell Button -->
                    <a asp-action="Notification" asp-controller="Employee" class="flex max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 bg-[#f0f2f5] text-[#111418] gap-2 text-sm font-bold leading-normal tracking-[0.015em] min-w-0 px-2.5">
                        <div class="text-[#111418]">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill="currentColor" viewBox="0 0 256 256">
                                <path d="M221.8,175.94C216.25,166.38,208,139.33,208,104a80,80,0,1,0-160,0c0,35.34-8.26,62.38-13.81,71.94A16,16,0,0,0,48,200H88.81a40,40,0,0,0,78.38,0H208a16,16,0,0,0,13.8-24.06ZM128,216a24,24,0,0,1-22.62-16h45.24A24,24,0,0,1,128,216ZM48,184c7.7-13.24,16-43.92,16-80a64,64,0,1,1,128,0c0,36.05,8.28,66.73,16,80Z"></path>
                            </svg>
                        </div>
                    </a>

                    <!-- Avatar -->
                    <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10"
                         style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuBEA3qsOQbwGVHELzWxQaRw8gjYeSbvBIPefbr3yL5YeafIO9BFXRBhFGOnSSQ9VG6yWLkymYCebbSwjEDB-t60dHvAuthDrr6yGJIsMVwspQgkHmZtOXTAtR5uA4dKC19lXZFmT8Qbk_iddqsXmzcirKwehgBuSZFRMdLLF8fyh7GOkVkElEQ5PfJrIL13WIDsZ3UVvRIPh1dsIZtOHJxTuk79EXf6RaQYdgw7PezBtJX45ooMk8FLoCbo-CzcItRkpx4B5pKJQtI");'>
                    </div>
                </div>
            </header>

            <!-- Main Content -->
            <div class="px-40 flex flex-1 justify-center py-5">
                <div class="layout-content-container flex flex-col max-w-[960px] flex-1">
                    <!-- Welcome Message -->
                    <div class="flex flex-wrap justify-between gap-3 p-4">
                        <p class="text-[#111418] tracking-light text-[32px] font-bold leading-tight min-w-72">
                            Welcome back, @userName
                        </p>
                    </div>

                    <!-- Explore Services -->
                    <h2 class="text-[#111418] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5">Explore Services</h2>

                    <!-- Service Grid -->
                    <div class="grid grid-cols-[repeat(auto-fit,minmax(158px,1fr))] gap-3 p-4" id="SereDiv">

                        @if (!Model.Any()) { }
                        else
                        {   
                        foreach (var service in Model)
                            {
                                <a asp-action="GetUserByServiceType" asp-controller="User" asp-route-serviceTypeId="@service.Id">
                                <div class="flex flex-col gap-3 pb-3">
                                    <div class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-lg" style='background-image: url("@service.ImgLink");'></div>
                                    <p class="text-[#111418] text-base font-medium leading-normal">@service.ServiceName</p>
                                </div>
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script src="~/js/signalr.js"></script>
    <script src="~/js/Notifcation.js"></script>
}
